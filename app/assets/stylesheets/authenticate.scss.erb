body {
    background: linear-gradient(45deg, rgba(204, 31, 115, 0.75) 0%, rgba(133, 20, 75, 0.75) 100%),
                url("<%= asset_path('login-page-wallpaper.png') %>")
                no-repeat center center fixed;
    background-size: cover;
}

div {
    div#login-container {
        div#login-box {
            padding: 2%;
            border-radius: 10px;

            color: #fff;

            text-align: center;

            header {
                h1 {
                    font-family: $lato-font;
                    font-weight: bold;
                    font-size: 5em;
                }

                img {
                    width: 30%;
                    height: 30%;
                }
            }

            article {
                font-family: $source-sans-pro-font;

                p {
                    font-size: 1.5em;
                }

                a#signin-button {
                    color: #fff;
                    text-align: center;

                    p {
                        font-size: 1em;
                    }
                }
            }
        }
    }
}

footer {
    font-family: $source-sans-pro-font;
    color: #fff;

    position: absolute;
    bottom: 0;

    p {
        text-align: center;
        padding: 1%;

        a {
            transition: 0.2s all ease-in;

            color: #a3c5ff;

            &:hover {
                color: #6680ad;
                text-decoration: none;
            }
        }
    }
}